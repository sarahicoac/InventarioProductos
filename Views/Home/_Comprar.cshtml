<div id="pantalla_comprar" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
                <div class="modal-header">
                    <h2>Comprar</h2>
                </div>
                
                <form class="form-horizontal" method="post">
                    <div class="modal-body">
                        <div class="form-group">
                            <label class="col-xs-2 col-xs-offset-3 control-label">Piezas a comprar:</label>
                            <div class="col-xs-4">
                                <input id="cantidad" name="cantidad" type="number">
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn-success">Guardar</button>
                        <button class="btn-danger" data-dismiss="modal">Cancelar</button>
                    </div>
                </form>
               
         </div>
    </div>
</div>