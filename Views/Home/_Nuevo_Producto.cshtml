<div id="pantalla_producto" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Añadir nuevo producto</h2>
            </div>
            <form class="form-horizontal" action="~/Home/InsertPro" method="post">
                <div class="modal-body">

                    <div class="form-group">
                        <label class="col-xs-2 col-xs-offset-3 control-label">Nombre:</label>
                        <div class="col-xs-4">
                            <input id="nombrePro" name="nombrePro" type="text">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-xs-2 col-xs-offset-3 control-label">Código de barra:</label>
                        <div class="col-xs-4">
                            <input id="codBarra" name="codBarra" type="text">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-xs-2 col-xs-offset-3 control-label">Precio:</label>
                        <div class="col-xs-4">
                            <input id="precio" name="precio" type="text">
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button class="btn-success" type="submit">Guardar</button>
                    <button class="btn-danger" data-dismiss="modal">Cancelar</button>
                </div>
            </form>
        </div>
     </div>
</div>